@{
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@HttpUtility.UrlDecode(Request.Cookies["PASS.LoginInfo"]["CourseName"]) 作業瀏覽</title>
</head>

<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<style>
    .font-set {
        color: darkgreen;
    }

    .font-waring {
        color: red;
    }

    table {
        margin-left: auto;
        margin-right: auto;
    }

    th {
        align: center;
    }

    button {
        align: center;
    }

    input[type=number]{
    width: 150px;
    }

    #showChart{
		background-color: #5bb85b;
		color: #ffffff;
		padding: 10px;
		border: 0px;
		border-radius: 8px;
		font-size: 18px;
		outline: none;
		cursor: pointer;
    } 
  	#container{
		position: fixed;
		top: 50%;
		width:100%;
		text-align: center;
		margin-top: -41px;
  	}

    label, input { display:block; }
    input.text { margin-bottom:12px; width:95%; padding: .4em; }
    fieldset { padding:0; border:0; margin-top:25px; }
    h1 { font-size: 1.2em; margin: .6em 0; }
    div#users-contain { width: 350px; margin: 20px 0; }
    div#users-contain table { margin: 1em 0; border-collapse: collapse; width: 100%; }
    div#users-contain table td, div#users-contain table th { border: 1px solid #eee; padding: .6em 10px; text-align: left; }
    .ui-dialog .ui-state-error { padding: .3em; }
    .validateTips { border: 1px solid transparent; padding: 0.3em; }
</style>
<body>
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery.canvasjs.min.js"></script>
    <script src="~/Scripts/jquery.form.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery-dateFormat.js"></script>
    <script src="~/Scripts/AssignmentList.js"></script>

    <div id="dialog-form" title="作業">
        <p id="actionTitle" class="font-set"></p>
        <p class="validateTips font-waring"></p>
        <form>
            <fieldset>
                <label for="title">課號</label>
                <input type="text" name="courseNo" id="courseNo" value="" class="text ui-widget-content ui-corner-all" readonly>
                <label for="title">作業名稱</label>
                <input type="text" name="name" id="name" value="" class="text ui-widget-content ui-corner-all">
                <label for="endDate">結束時間</label>
                <input type="date" name="endDate" id="endDate" value="" class="ui-widget-content ui-corner-all">
                <label for="descript">作業描述</label>
                <textarea id="descript" rows="4" cols="25"></textarea>

                <!-- Allow form submission with keyboard without duplicating the dialog button -->
                <input type="submit" tabindex="-1" style="position:absolute; top:-1000px">
            </fieldset>
        </form>
    </div>

    <div id="score-form" title="作業成績">
        <form>
            <p id="title" class="font-set"></p>
            <div align="center">
                <div id="score_table"></div>
            </div>
        </form>
    </div>

    <div id="dialogBox" style="display: none;">
        <div id="chartContainer" class="dialog" style="height: 300px; width: 100%;"></div>
    </div>

    <div>
        <h1 align="center" class="font-set">@HttpUtility.UrlDecode(Request.Cookies["PASS.LoginInfo"]["CourseName"]) 作業瀏覽</h1>
        <div align="center">
            <button id="addBtn" form="button1">新增</button>
            <button id="editBtn" form="button2">修改</button>
            <button id="deleteBtn" form="button3">刪除</button>
        </div>
        <div align="center">
            <div id="here_table"></div>
        </div>
    </div>

    
</body>
</html>
